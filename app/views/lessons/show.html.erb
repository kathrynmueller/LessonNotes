<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to 'All Students', students_path, class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to 'All Lessons', lessons_path, class:"nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to 'Create New Lesson', new_lesson_path, class:"nav-link" %>
  </li>
</ul>

<div class="header-bar">
  <h1>View Lesson</h1>
</div>

<p>
  <strong>Student:</strong>
  <%= @lesson.student.firstname %> <%= @lesson.student.lastname %>
</p>

<p>
  <strong>Lesson Date:</strong>
  <%= @lesson.lesson_date.strftime("%b %d, %Y") %>
</p>

<p>
  <strong>Status:</strong>
  <%= @lesson.status %>
</p>

<p>
  <strong>Grade:</strong>
  <%= @lesson.grade %>
</p>

<p>
  <strong>Teachernote:</strong>
  <%= @lesson.teachernote %>
</p>

<p>
  <strong>Studentnote:</strong>
  <%= @lesson.studentnote %>
</p>

<p>
  <strong>Reminder:</strong>
  <%= @lesson.reminder %>
</p>


<%= link_to 'Edit', edit_lesson_path(@lesson), class: 'button btn btn-success' %>
<%= link_to 'Delete', @lesson, method: :delete, data: { confirm: 'Are you sure you want to delete this lesson? Click "cancel" to keep it.' }, class: 'button btn btn-danger' %>
<br>
<%= link_to 'Set up Next Lesson', new_lesson_path, class: 'button btn btn-success' %>

<%= link_to 'Go to Student Info', show_student_path(id: @lesson.student_id), class: 'button btn btn-success' %>

<%= link_to 'Show All Lessons for this Student', student_lessons_path(id: @lesson.student_id), class: 'button btn btn-info' %> 

