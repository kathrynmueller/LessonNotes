<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to 'All Students', students_path, class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to 'All Lessons', lessons_path, class:"nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to 'Create New Lesson', new_lesson_path, class:"nav-link" %>
  </li>
</ul>

<div class="header-bar">
  <h1>Lessons By Student</h1>
</div>

<h3>Student: <%= @student.firstname %> <%=@student.lastname %> </h3>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Lesson Date</th>
      <th>Status</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.student.firstname, show_student_path(id: lesson.student_id) %></td>
        <td><%= lesson.student.lastname %></td>
        <td><%= lesson.lesson_date.strftime('%a, %B %e, %l:%M %p ') %></td>
        <td><%= lesson.status.try(:humanize) %></td>
        <td><%= lesson.grade %></td>
        <td><%= link_to 'View Notes', lesson, class: 'button btn btn-info' %></td>
        <td><%= link_to 'Edit Notes/Date', edit_lesson_path(lesson), class: 'button btn btn-info' %></td>
        <td><%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure you want to delete this lesson? Click "cancel" to keep it.' }, class: 'button btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>

