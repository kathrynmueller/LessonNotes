<div class="header-bar">
  <h1>Manage Quotes</h1>
</div>

<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Quote</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.quote %></td>
        <td><%= quote.author %></td>
        <td><%= link_to 'View', quote, class: 'button btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote), class: 'button btn btn-info' %></td>
        <td><%= link_to 'Delete', quote, method: :delete, class: 'button btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<hr>

<%= link_to 'New Quote', new_quote_path, class: 'button btn btn-success' %>
